<Window x:Class="Bai06.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bai06"
        mc:Ignorable="d"
        Title="Calculator" Height="400" Width="400"
        ResizeMode="NoResize">
    <Grid Margin="10, 0, 10, 10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0">
            <MenuItem Header ="_Edit"/>
            <MenuItem Header ="_View"/>
            <MenuItem Header ="_Help"/>
        </Menu>

        <TextBox x:Name="DisplayTextBox" 
                 IsReadOnly="True" 
                 Text="0" 
                 Grid.Row="1" 
                 Margin="0, 5, 0, 5" 
                 Padding="5" 
                 HorizontalContentAlignment="Right" 
                 BorderThickness="2"
                 FontSize="20"
                 FontWeight="Bold">
        </TextBox>

        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       Grid.Column="0" 
                       Grid.Row="0" 
                       x:Name="MemoryIndicator"
                       Text="M"
                       Foreground="Red"    
                       FontSize="16"
                       Margin="5"
                       FontWeight="Bold"
                       Visibility="Collapsed"/>

            <Grid Grid.Column="0" Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Button x:Name="ButtonMC" Click="MemoryClear_Click" Grid.Row="0" Padding="5" Margin="5">
                    <TextBlock Text="MC" FontSize="16" />
                </Button>
                <Button x:Name="ButtonMR" Click="MemoryRecall_Click" Grid.Row="1" Padding="5" Margin="5">
                    <TextBlock Text="MR" Foreground="Red" FontSize="16"/>
                </Button>
                <Button x:Name="ButtonMS" Click="MemoryStore_Click" Grid.Row="2" Padding="5" Margin="5">
                    <TextBlock Text="MS" Foreground="Red" FontSize="16" />
                </Button>
                <Button x:Name="ButtonMPlus" Click="MemoryAdd_Click" Grid.Row="3" Padding="5" Margin="5">
                    <TextBlock Text="M+" Foreground="Red" FontSize="16"/>
                </Button>
            </Grid>

            <Grid Grid.Row="0" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="ButtonBackspace" Click="Backspace_Click" Grid.Column="0" Padding="5" Margin="5">
                    <TextBlock Text="Backspace" FontSize="16" Foreground="Red"/>
                </Button>
                <Button x:Name="ButtonCE" Click="ClearEntry_Click" Grid.Column="1" Padding="5" Margin="5">
                    <TextBlock Text="CE" FontSize="16" Foreground="Red"/>
                </Button>
                <Button x:Name="ButtonC" Click="Clear_Click" Grid.Column="2" Padding="5" Margin="5">
                    <TextBlock Text="C" FontSize="16" Foreground="Red"/>
                </Button>
            </Grid>

            <Grid Grid.Column="1" Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Button x:Name="Button7" Click="Number_Click" Tag="7" Grid.Column="0" Grid.Row="0" Padding="5" Margin="5">
                    <TextBlock Text="7" FontSize="16" Foreground="Blue"/>
                </Button>
                <Button x:Name="Button4" Click="Number_Click" Tag="4" Grid.Column="0" Grid.Row="1" Padding="5" Margin="5">
                    <TextBlock Text="4" FontSize="16" Foreground="Blue"/>
                </Button>
                <Button x:Name="Button1" Click="Number_Click" Tag="1" Grid.Column="0" Grid.Row="2" Padding="5" Margin="5">
                    <TextBlock Text="1" FontSize="16" Foreground="Blue"/>
                </Button>
                <Button x:Name="Button0" Click="Number_Click" Tag="0" Grid.Column="0" Grid.Row="3" Padding="5" Margin="5">
                    <TextBlock Text="0" FontSize="16" Foreground="Blue"/>
                </Button>

                <Button x:Name="Button8" Click="Number_Click" Tag="8" Grid.Column="1" Grid.Row="0" Padding="5" Margin="5">
                    <TextBlock Text="8" FontSize="16" Foreground="Blue"/>
                </Button>
                <Button x:Name="Button5" Click="Number_Click" Tag="5" Grid.Column="1" Grid.Row="1" Padding="5" Margin="5">
                    <TextBlock Text="5" FontSize="16" Foreground="Blue"/>
                </Button>
                <Button x:Name="Button2" Click="Number_Click" Tag="2" Grid.Column="1" Grid.Row="2" Padding="5" Margin="5">
                    <TextBlock Text="2" FontSize="16" Foreground="Blue"/>
                </Button>
                <Button x:Name="ButtonPlusMinus" Click="Negate_Click" Grid.Column="1" Grid.Row="3" Padding="5" Margin="5">
                    <TextBlock Text="±" FontSize="16" Foreground="Blue"/>
                </Button>

                <Button x:Name="Button9" Click="Number_Click" Tag="9" Grid.Column="2" Grid.Row="0" Padding="5" Margin="5">
                    <TextBlock Text="9" FontSize="16" Foreground="Blue"/>
                </Button>
                <Button x:Name="Button6" Click="Number_Click" Tag="6" Grid.Column="2" Grid.Row="1" Padding="5" Margin="5">
                    <TextBlock Text="6" FontSize="16" Foreground="Blue"/>
                </Button>
                <Button x:Name="Button3" Click="Number_Click" Tag="3" Grid.Column="2" Grid.Row="2" Padding="5" Margin="5">
                    <TextBlock Text="3" FontSize="16" Foreground="Blue"/>
                </Button>
                <Button x:Name="ButtonDecimal" Click="Decimal_Click" Grid.Column="2" Grid.Row="3" Padding="5" Margin="5">
                    <TextBlock Text="." FontSize="16" Foreground="Blue"/>
                </Button>

                <Button x:Name="ButtonDivide" Click="Operator_Click" Tag="/" Grid.Column="3" Grid.Row="0" Padding="5" Margin="5">
                    <TextBlock Text="/" FontSize="16" Foreground="Red"/>
                </Button>
                <Button x:Name="ButtonMultiply" Click="Operator_Click" Tag="*" Grid.Column="3" Grid.Row="1" Padding="5" Margin="5">
                    <TextBlock Text="×" FontSize="16" Foreground="Red"/>
                </Button>
                <Button x:Name="ButtonSubtract" Click="Operator_Click" Tag="-" Grid.Column="3" Grid.Row="2" Padding="5" Margin="5">
                    <TextBlock Text="−" FontSize="16" Foreground="Red"/>
                </Button>
                <Button x:Name="ButtonAdd" Click="Operator_Click" Tag="+" Grid.Column="3" Grid.Row="3" Padding="5" Margin="5">
                    <TextBlock Text="+" FontSize="16" Foreground="Red"/>
                </Button>

                <Button x:Name="ButtonSqrt" Click="Sqrt_Click" Grid.Column="4" Grid.Row="0" Padding="5" Margin="5">
                    <TextBlock Text="√" FontSize="16" Foreground="Blue"/>
                </Button>
                <Button x:Name="ButtonPercent" Click="Percent_Click" Grid.Column="4" Grid.Row="1" Padding="5" Margin="5">
                    <TextBlock Text="%" FontSize="16" Foreground="Blue"/>
                </Button>
                <Button x:Name="ButtonReciprocal" Click="Reciprocal_Click" Grid.Column="4" Grid.Row="2" Padding="5" Margin="5">
                    <TextBlock Text="1/x" FontSize="16" Foreground="Blue"/>
                </Button>
                <Button x:Name="ButtonEquals" Click="Equals_Click" Grid.Column="4" Grid.Row="3" Padding="5" Margin="5">
                    <TextBlock Text="=" FontSize="16" Foreground="Red"/>
                </Button>
            </Grid>
        </Grid>
    </Grid>
</Window>