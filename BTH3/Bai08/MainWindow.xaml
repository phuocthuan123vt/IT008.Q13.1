<Window x:Class="Bai08.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bai08"
        mc:Ignorable="d"
        Title="Quản Lý Tài Khoản" Height="600" Width="900"
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" FontSize="55" Foreground="Blue" HorizontalAlignment="Center">
            QUẢN LÝ THÔNG TIN TÀI KHOẢN
        </TextBlock>
        <Grid Grid.Row="1" Margin="100, 30, 100, 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock
                Grid.Row="0" 
                Grid.Column="0" 
                HorizontalAlignment="Right"
                Margin="5"
                >Số tài khoản</TextBlock>
            <TextBlock
                Grid.Row="1" 
                Grid.Column="0" 
                HorizontalAlignment="Right"
                Margin="5"
                >Tên khách hàng</TextBlock>
            <TextBlock
                Grid.Row="2" 
                Grid.Column="0" 
                HorizontalAlignment="Right"
                Margin="5"
                >Địa chỉ khách hàng</TextBlock>
            <TextBlock
                Grid.Row="3" 
                Grid.Column="0" 
                HorizontalAlignment="Right"
                Margin="5"
                >Số tiền trong tài khoản</TextBlock>
            <TextBox x:Name="AccountID_TextBox"  Grid.Row="0" Grid.Column="1" Margin="5, 5, 0, 5">
            </TextBox>
            <TextBox x:Name="CustomerName_TextBox"  Grid.Row="1" Grid.Column="1" Margin="5, 5, 0, 5">
            </TextBox>
            <TextBox x:Name="CustomerAddress_TextBox" Grid.Row="2" Grid.Column="1" Margin="5, 5, 0, 5">
            </TextBox>
            <TextBox x:Name="AccountBalance_TextBox" Grid.Row="3" Grid.Column="1" Margin="5, 5, 0, 5">
            </TextBox>
        </Grid>
        <Grid Grid.Row="2" Margin="100, 0, 100, 0" Width="400" HorizontalAlignment="Right">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="133*"/>
                <ColumnDefinition Width="21*"/>
                <ColumnDefinition Width="113*"/>
                <ColumnDefinition Width="133*"/>
            </Grid.ColumnDefinitions>
            <Button
                x:Name="AddUpdateButton"
                Grid.Column="0"
                Margin="20,10,0,10"
                Padding="5"
                Content="Thêm / Cập Nhật"
                Click ="AddUpdateButton_Click"
                >
            </Button>
            <Button
                x:Name="DeleteButton"
                Grid.Column="1"
                Margin="20,10,133,10"
                Padding="5"
                Content="Xoá" Grid.ColumnSpan="3"
                Click="DeleteButton_Click">
            </Button>
            <Button
                x:Name="ExitButton"
                Grid.Column="3"
                Margin="20,10,0,10"
                Padding="5"
                Content="Thoát"
                Click="ExitButton_Click">
            </Button>
        </Grid>
        <ListView x:Name="AccountListView" Grid.Row="3" Margin="10, 0, 10, 10" SelectionChanged="AccountListView_SelectionChanged">

            <ListView.View>
                <GridView>
                    <GridViewColumn Header="STT" Width="50" DisplayMemberBinding="{Binding STT}"/>
                    <GridViewColumn Header="Mã tài khoản" Width="150" DisplayMemberBinding="{Binding ID}"/>
                    <GridViewColumn Header="Tên khách hàng" Width="250" DisplayMemberBinding="{Binding FullName}"/>
                    <GridViewColumn Header="Địa chỉ" Width="300" DisplayMemberBinding="{Binding Address}"/>
                    <GridViewColumn Header="Số tiền" Width="150" DisplayMemberBinding="{Binding Balance}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Grid Grid.Row="4" Width="300" HorizontalAlignment="Right" Margin="10, 0, 10, 10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock
                Grid.Column="0"
                FontSize="14"
                Margin="0,0,10,0"
                >Tổng tiền:</TextBlock>
            <TextBox Grid.Column="1"
                x:Name="TotalAmount"
                     IsEnabled="False"
                >
            </TextBox>
        </Grid>
    </Grid>
</Window>
