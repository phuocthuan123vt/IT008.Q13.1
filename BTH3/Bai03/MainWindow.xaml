<Window x:Class="Bai03.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bai03"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        >
    <Grid x:Name="MainGrid" Background="White" >
        <Button Grid.Row="0" x:Name="btn" Content="Change Color" BorderBrush="Black" BorderThickness="1" Click="btn_Click" Height="30" Width="100" HorizontalAlignment="Center" VerticalAlignment="Center">
        </Button>
    </Grid>
</Window>
